<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:text="Intent Examples Activity"
        android:textSize="24sp" />

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendEmailExample"
        android:text="@string/sendEmail"/>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewURL"
        android:text="@string/viewURL"/>

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/makePhoneCall"
        android:text="@string/call"/>

    <Button
        android:id="@+id/intent_return_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back" />

</LinearLayout>